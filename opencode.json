{
  "$schema": "https://opencode.ai/config.json",
  "instructions": ["./CODESTYLE.md", "./GITHUB.md", "./SVELTE.md"],
  "mcp": {
    "context7": {
      "enabled": true,
      "headers": {
        "CONTEXT7_API_KEY": "{file:~/.secrets/context7-api-key}"
      },
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    },
    "sentry": {
      "command": ["npx", "-y", "mcp-remote@latest", "https://mcp.sentry.dev/mcp"],
      "enabled": true,
      "type": "local"
    },
    "svelte5": {
      "enabled": true,
      "type": "remote",
      "url": "https://svelte-llm.stanislav.garden/mcp/mcp"
    }
  }
}
